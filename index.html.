    <!-- Export Button -->
    

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const cards = document.querySelectorAll('.interactive-card');

            const toggleDetails = (card) => {
                const wasOpen = card.querySelector('.details').classList.contains('show');
                
                cards.forEach(otherCard => {
                    const details = otherCard.querySelector('.details');
                    if (details && details.classList.contains('show')) {
                        details.classList.remove('show');
                    }
                });

                if (!wasOpen) {
                    const details = card.querySelector('.details');
                    if (details) {
                        details.classList.add('show');
                    }
                }
            };

            cards.forEach(card => {
                card.addEventListener('click', (e) => {
                    if(e.target.closest('button, a')) {
                        return;
                    }
                    toggleDetails(card);
                });
                card.addEventListener('keydown', (event) => {
                    if (event.key === 'Enter' || event.key === ' ') {
                        event.preventDefault();
                        toggleDetails(card);
                    }
                });
            });

            // --- EXPORT FUNCTIONALITY ---
            const exportBtn = document.getElementById('exportBtn');
            exportBtn.addEventListener('click', () => {
                // Klona hela HTML-dokumentet f칬r att kunna manipulera det utan att f칬rst칬ra den nuvarande sidan
                const clonedDoc = document.documentElement.cloneNode(true);
                
                // Ta bort export-knappen och script-taggen fr친n den klonade versionen
                const scriptToRemove = clonedDoc.querySelector('script'); // Tar bort det f칬rsta scriptet, vilket 칛r v친rt interaktions-script
                const buttonToRemove = clonedDoc.querySelector('#exportBtn');
                
                if(scriptToRemove) scriptToRemove.parentNode.removeChild(scriptToRemove);
                if(buttonToRemove) buttonToRemove.parentNode.removeChild(buttonToRemove);

                // Skapa en blob (en fil-liknande objekt) fr친n den rensade HTML-koden
                const blob = new Blob([clonedDoc.outerHTML], { type: 'text/html' });
                const url = URL.createObjectURL(blob);
                
                // Skapa en tempor칛r l칛nk f칬r att ladda ner filen
                const a = document.createElement('a');
                a.href = url;
                a.download = 'putni-vodic.html'; // Filnamnet blir "putni-vodic.html"
                document.body.appendChild(a);
a.click();
                
                // St칛da upp efter친t
                document.body.removeChild(a);
                URL.revokeObjectURL(url);
            });
        });
    </script>



